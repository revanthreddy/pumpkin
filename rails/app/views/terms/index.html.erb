<h1>Listing terms</h1>

<table>
  <thead>
    <tr>
      <th>Quiz</th>
      <th>Term</th>
      <th>Definition</th>
      <th>Img url</th>
      <th>Img width</th>
      <th>Img height</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= term.quiz_id %></td>
        <td><%= term.term %></td>
        <td><%= term.definition %></td>
        <td><%= term.img_url %></td>
        <td><%= term.img_width %></td>
        <td><%= term.img_height %></td>
        <td><%= term.rank %></td>
        <td><%= link_to 'Show', term %></td>
        <td><%= link_to 'Edit', edit_term_path(term) %></td>
        <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

