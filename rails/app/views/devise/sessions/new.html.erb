

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <fieldset>
    <legend> Log in </legend>
    <div class="field">
      <%= f.label :email, html: {class: "control-label"} %><br />
      <%= f.email_field :email, autofocus: true, html: {class: "form-control"}  %>
    </div>

    <div class="field">
      <%= f.label :password, html: {class: "control-label"}  %><br />
      <%= f.password_field :password, autocomplete: "off", html: {class: "form-control"} %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>

